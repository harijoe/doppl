{% extends 'base.html.twig' %}

{% block body %}
<div class="columns">
    <header class="column is-half">
        <div class="header hero is-fullheight has-text-centered">
            <div class="hero-body">
                <div class="container">
                    {# Photo #}
                    <p>
                        <img class="selfie" src="{{ asset('img/selfie.jpg') }}"/>
                    </p>

                    {# Julien Vallini #}
                    {% if tag is empty %}
                        <h1 class="title">Julien Vallini</h1>
                    {% else %}
                        <p class="title">
                            <a href="{{ path('home_' ~ app.request.getLocale()) }}">Julien Vallini</a>
                        </p>
                    {% endif %}


                    {# Tag title #}
                    {% if tag is empty %}
                        <p class="subtitle">{{ 'home.title'|trans }}</p>
                    {% else %}
                        <h1 class="subtitle">{{ ('tag.' ~ tag ~ '.title')|trans }}</h1>
                    {% endif %}

                </div>
            </div>
            <div class="hero-foot">
                <a href="#about-me">
                    <svg class="icon dark icon-chevron-down"><use xlink:href="#icon-chevron-down"></use></svg>
                </a>
            </div>
        </div>
    </header>
    <section class="column" id="about-me">
        <div class="hero is-fullheight tag-panel">
            <div class="hero-body">

            <div class="container">
                {# Tag description #}
                <div class="content is-small">
                    <!-- Rocket icon by Icons8 -->
                    {% if tag is empty %}
                        {{ 'home.subtitle'|trans|text2html }}
                    {% else %}
                        {{ 'home.tag.subtitle'|trans({'%tag-in-phrase%': ('tag.' ~ tag ~ '.in-phrase')|trans})|text2html }}
                    {% endif %}
                </div>

                {# Tag list #}
                <ul class="tags">
                    {% for item in tags %}
                        <li>
                            {% if item == tag %}
                                <span class="button is-active is-primary">
                                    {{ ('tag.' ~ tag ~ '.name')|trans }}
                                </span>
                            {% else %}
                                <a class="button is-primary is-outlined" href="{{ path('tag_' ~ item ~ '_' ~ app.request.locale) }}">
                                    {{ ('tag.' ~ item ~ '.name')|trans }}
                                </a>
                            {% endif %}
                        </li>
                    {% endfor %}
                </ul>
            </div>
                </div>
        </div>
    </section>
</div>


    {#</div>#}
    {#</section>#}

    {% if ('tag.' ~ tag ~ '.description')|has_trans %}
        <section>
            {# Tag description #}
            {% if tag is not empty %}
                {{ ('tag.' ~ tag ~ '.description')|trans|text2html }}
            {% endif %}

            {# Contact link #}
            <p>
                <a href="{{ path('contact_' ~ app.request.getLocale()) }}">
                    {{ 'contact.link'|trans }}
                </a>
            </p>
        </section>
    {% endif %}
{% endblock %}

    {% macro switchLocale() %}

    {% endmacro %}
